# Environment Configuration for MCP Tester UI

# Server Configuration
PORT=3001

# Telemetry Ingestor (Your deployed container app)
TELEMETRY_INGESTOR_URL=https://your-app.azurecontainerapps.io

# Azure AD Configuration
AZURE_TENANT_ID=your-tenant-id
AZURE_CLIENT_ID=your-client-id

# Fabric Configuration (Optional)
FABRIC_WORKSPACE_ID=your-workspace-id
EVENTSTREAM_NAME=your-eventstream-name

# Security (for production deployment)
NODE_ENV=development
SESSION_SECRET=your-session-secret-change-this-in-production

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
